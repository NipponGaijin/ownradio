<resources>
	
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>
	
	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
	</style>
	
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
	</style>
	
	<style name="PreferenceScreen" parent="AppTheme">
		<item name="android:textAllCaps">true</item>
	</style>
	
	
	<style name="PreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
		<item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
	</style>
	
	<style name="splashScreenTheme" parent="AppTheme">
		<item name="android:windowBackground">@android:color/white</item>
		<!--<item name="android:windowBackground">@drawable/launch_screen</item>-->
	</style>
	<style name="yesRateButton" parent="ThemeOverlay.AppCompat">
		<item name="colorAccent">@color/ColorPrimaryBtnPlay</item>
	</style>
	<style name="noRateButton" parent="ThemeOverlay.AppCompat">
		<item name="colorAccent">@android:color/holo_red_dark</item>
	</style>
	<style name="AppTheme.RatePopupTheme">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowCloseOnTouchOutside">true</item>
		<!--<item name="android:background">#31DDDDDD</item>-->
	</style>

	<style name="RateButtonTheme">
		<item name="android:background">@drawable/rate_button_drawable</item>
	</style>

	<style name="ClosePopupStyle">
		<item name="android:background">@drawable/close_popup_button_drawable</item>
	</style>

	<style name="SeekBarWithoutSteps" parent="Base.Widget.AppCompat.SeekBar.Discrete">
		<item name="tickMark">@null</item>
	</style>

</resources>
